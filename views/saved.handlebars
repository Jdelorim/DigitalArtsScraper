    <div class="nav-wrapper z-depth-5 deep-purple darken-3">
        <span class="brand-logo">{{title}}</span>
        <div class="container">
            <div class="right">
                <a href="#" class="sidenav-trigger" data-target="mobile-links">
                    <i class="material-icons">menu</i>
                </a>
            </div>
            <ul class="right hide-on-med-and-down">
                <li><a href="/">Home</a></li>
                <li><a href="/saved">Saved Articles</a></li>
                <li><a href="/clear2" class="waves-effect waves-light btn deep-purple lighten-1">Clear Articles</a></li>
